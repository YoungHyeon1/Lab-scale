FROM python:3.11-slim


RUN apt-get update && apt-get install -y curl

# Install Poetry
RUN curl -sSL https://install.python-poetry.org | POETRY_HOME=/opt/poetry python && \
    cd /usr/local/bin && \
    ln -s /opt/poetry/bin/poetry && \
    poetry config virtualenvs.create false

COPY ./Backend/pyproject.toml /Backend/app/
COPY ./Backend/poetry.lock* /Backend/app/
COPY ./lib-commons /Backend/lib-commons/
COPY ./Backend/app/celery_app.py /Backend/app/
COPY ./Backend/app/tasks /Backend/app/tasks

WORKDIR /Backend/app/

RUN poetry install --no-root --no-ansi -vv ${POETRY_ARGS}

CMD ["celery", "-A", "celery_app", "worker", "-l", "info"]
